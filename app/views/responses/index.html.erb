<%= render partial: 'shared/nav' %>

<div class="text-center">
  <h1>Survey Taker:</h1>
  <hr>
  <h3><%= @survey.title %></h3>  
</div>
<br>
<p><%= @survey.description %></p>
<br>
<p><em><%= @survey.responses.count %> Responses</em></p>
<br>

<ol>
  
<% @survey.questions.each do |question| %>

  <li>
    <%= question.content %>

    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Response</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
        <% question.options.all.each do |option| %>
        <tr>
          <td><%= option.content %></td>
          <td><%= Selection.where(option_id: option.id).size %></td>          
        </tr>
        <% end %>
      </tbody>
    </table>
  </li>


<% end %>

</ol>

